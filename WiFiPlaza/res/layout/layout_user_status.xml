<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/user_back"
    android:orientation="horizontal" >

    <!-- .9不能用做 compound drawable -->

    <LinearLayout
        android:id="@+id/user_status_layout"
        android:layout_width="186dp"
        android:layout_height="100dp"
        android:clickable="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/user_header"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_contacts_holo_dark" />

        <TextView
            android:id="@+id/user_status_tips"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="@string/click_login" />
    </LinearLayout>

    <TextView
        android:id="@+id/available_wifi"
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:gravity="center_vertical"
        android:text="@string/available_wifi" />

</LinearLayout>